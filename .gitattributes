# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Shell scripts must use LF
*.sh text eol=lf
docker-entrypoint.sh text eol=lf

# Python files use LF
*.py text eol=lf
pyproject.toml text eol=lf

# Docker files use LF
Dockerfile text eol=lf
.dockerignore text eol=lf

# YAML files use LF
*.yml text eol=lf
*.yaml text eol=lf

# Markdown files use LF
*.md text eol=lf

# JSON files use LF
*.json text eol=lf

# Windows scripts should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
