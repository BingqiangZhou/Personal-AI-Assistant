# HTTPS 配置模板 - 生产环境使用 / HTTPS Configuration Template - Production
#
# 此模板使用环境变量，由 Docker 自动替换
# This template uses env vars, auto-replaced by Docker via entrypoint script
#
# 环境变量 / Environment Variables:
#   ${DOMAIN} - 你的域名 / Your domain name (default: localhost)
#   ${SSL_CERT_PATH} - SSL 证书路径 / SSL certificate path
#   ${SSL_KEY_PATH} - SSL 私钥路径 / SSL private key path
#
# 说明：此配置同时支持 HTTP (80) 和 HTTPS (443) 访问

# Upstream Backend Server Configuration
upstream fastapi_backend {
    # 使用 Docker 服务名 / Use Docker service name
    server backend:8000;
    keepalive 32;
}

# HTTP Server (端口 80)
server {
    listen 80;
    listen [::]:80;
    server_name ${DOMAIN} localhost;

    # 字符集 / Charset
    charset utf-8;

    # 日志 / Logs
    access_log /var/log/nginx/backend.access.log main;
    error_log /var/log/nginx/backend.error.log warn;

    # 连接与缓冲全局设置 / Connection and buffering defaults
    keepalive_timeout 65s;
    send_timeout 60s;

    # 流式接口：关闭 buffering / Streaming endpoints: disable buffering
    location ~* ^/api/v1/.*/stream {
        proxy_pass http://fastapi_backend;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;

        proxy_buffering off;
        proxy_request_buffering off;
    }

    # 根路径代理到 FastAPI 后端 / Proxy root path to FastAPI backend
    location / {
        proxy_pass http://fastapi_backend;
        proxy_http_version 1.1;

        # 代理头设置 / Proxy Headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket 支持 / WebSocket Support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # 超时设置 / Timeout Settings
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;

        # 缓冲设置（默认开启）/ Buffer Settings (enabled by default)
        proxy_buffering on;
        proxy_request_buffering on;
        proxy_buffer_size 16k;
        proxy_buffers 16 16k;
        proxy_busy_buffers_size 64k;
    }

    # API 健康检查端点 / API Health Check Endpoint
    location /health {
        proxy_pass http://fastapi_backend/health;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        access_log off;
    }

    # 静态文件缓存 / Static Files Cache
    location /static/ {
        proxy_pass http://fastapi_backend;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    # 上传文件大小限制 / Upload File Size Limit
    client_max_body_size 100M;
    client_body_buffer_size 10M;
}

# HTTPS Server (端口 443)
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name ${DOMAIN} localhost;

    # 字符集 / Charset
    charset utf-8;

    # SSL 证书配置 / SSL Certificate Configuration
    ssl_certificate ${SSL_CERT_PATH};
    ssl_certificate_key ${SSL_KEY_PATH};

    # SSL 协议和加密套件 / SSL Protocols and Ciphers
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;

    # SSL 会话缓存 / SSL Session Cache
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_session_tickets off;

    # 安全头 / Security Headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;

    # 日志 / Logs
    access_log /var/log/nginx/backend-ssl.access.log main;
    error_log /var/log/nginx/backend-ssl.error.log warn;

    # 连接与缓冲全局设置 / Connection and buffering defaults
    keepalive_timeout 65s;
    send_timeout 60s;

    # 流式接口：关闭 buffering / Streaming endpoints: disable buffering
